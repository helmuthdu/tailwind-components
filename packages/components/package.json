{
  "name": "@tailwind/components",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "npm run lint:script && npm run lint:style",
    "lint:script": "eslint src --ext .jsx,.js,.ts,.tsx,.vue --fix --ignore-path .gitignore",
    "lint:style": "stylelint src/**/*.{css,scss,vue}",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook && npx tailwindcss -i storybook-static/main.*.chunk.css -o storybook-static/main.*.chunk.css -m"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/html": "^6.4.9",
    "@tailwindcss/typography": "^0.5.0",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "postcss": "^8.4.5",
    "postcss-import": "^14.0.2",
    "postcss-nesting": "^10.0.3",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.5.4",
    "vite": "^2.7.3"
  },
  "dependencies": {
    "hybrids": "^7.0.3"
  }
}
