{
  "name": "@web-components/custom-elements",
  "private": true,
  "version": "1.0.0",
  "files": [
    "dist"
  ],
  "main": "./dist/web-components.umd.js",
  "module": "./dist/web-components.es.js",
  "exports": {
    ".": {
      "import": "./dist/web-components.es.js",
      "require": "./dist/web-components.umd.js"
    }
  },
  "engines": {
    "node": ">= 16.0.0",
    "npm": ">= 8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "tsc && vite build -c=vite.lib.config.js",
    "preview": "vite preview",
    "storybook": "npm run tailwind:storybook && start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "tailwind:storybook": "tailwindcss --postcss -i tailwind.css -o .storybook/public/tailwind.css -m"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@mdx-js/mdx": "^2.1.2",
    "@storybook/addon-a11y": "^6.5.9",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-docs": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-interactions": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/builder-vite": "^0.2.0",
    "@storybook/html": "^6.5.9",
    "@storybook/testing-library": "^0.0.13",
    "@storybook/theming": "^6.5.9",
    "@tailwindcss/typography": "^0.5.4",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.5",
    "cssnano": "^5.1.12",
    "jsdom": "^20.0.0",
    "postcss": "^8.4.14",
    "postcss-import": "^14.1.0",
    "postcss-nesting": "^10.1.10",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.7.4",
    "vite": "^3.0.0",
    "vitest": "^0.18.0"
  }
}
